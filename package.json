{
  "name": "@freik/node-utils",
  "version": "1.0.1",
  "description": "My personal set of utilities for NodeJS",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/kevinfrei/node-utils/issues"
  },
  "homepage": "https://github.com/kevinfrei/node-utils#readme",
  "keywords": [
    "node-utils"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinfrei/node-utils.git"
  },
  "module": "./lib/esm/index.js",
  "main": "./lib/cjs/index.js",
  "types": "./lib/esm/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "watch": "jest --config jestconfig.json --watch",
    "clean": "rimraf lib && rimraf \".*.tsbuildinfo\"",
    "build": "tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json",
    "cleanbuild": "yarn clean && yarn build",
    "dbg": "yarn clean && tsc --sourceMap true --project tsconfig.cjs.json && tsc --sourceMap true --project tsconfig.esm.json",
    "prepare": "yarn build",
    "postinstall": "husky install",
    "prepublishOnly": "yarn test && yarn  lint && pinst --disable",
    "postpublish": "pinst --enable",
    "format": "prettier --write \"src/**/*.ts\" \"*.md\" \"*.json\"",
    "lint": "eslint --fix --ext .ts src",
    "preversion": "yarn  lint",
    "version": "yarn  format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit --project tsconfig.esm.json && tsc --noEmit --project tsconfig.cjs.json",
    "chk": "yarn run format && yarn run compile && yarn run lint && yarn test"
  },
  "peerDependencies": {
    "@freik/core-utils": "^1.0.0"
  },
  "dependencies": {
    "is-hidden-file": "^1.1.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^1.2.3",
    "@freik/build-tools": "^3.2.1",
    "@freik/core-utils": "^1.0.1",
    "@types/jest": "^27.5.0",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.0",
    "jest": "^28.1.0",
    "pinst": "^3.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4"
  },
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": "^14.13.1 || >= 16.0.0"
  }
}
