{
  "name": "@freik/node-utils",
  "version": "1.2.6",
  "description": "My personal set of utilities for NodeJS",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/kevinfrei/node-utils/issues"
  },
  "homepage": "https://github.com/kevinfrei/node-utils#readme",
  "keywords": [
    "node-utils"
  ],
  "repository": "github:kevinfrei/node-utils",
  "module": "./lib/esm/index.js",
  "main": "./lib/cjs/index.js",
  "types": "./lib/esm/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "watch": "jest --config jestconfig.json --watch",
    "clean": "rimraf lib .cjs.tsbuildinfo .mjs.tsbuildinfo coverage",
    "build": "tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json",
    "cleanbuild": "yarn clean && yarn build",
    "dbg": "yarn clean && tsc --sourceMap true --project tsconfig.cjs.json && tsc --sourceMap true --project tsconfig.esm.json",
    "prepare": "yarn build",
    "postinstall": "husky install",
    "prepublishOnly": "yarn test && yarn  lint && yarn pinst --disable",
    "postpublish": "yarn pinst --enable",
    "format": "ftool format",
    "lint": "eslint --fix --ext .ts src",
    "preversion": "yarn  lint",
    "version": "yarn  format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit --project tsconfig.esm.json && tsc --noEmit --project tsconfig.cjs.json",
    "chk": "yarn run format && yarn run compile && yarn run lint && yarn test"
  },
  "peerDependencies": {
    "@freik/core-utils": ">=1.2.0"
  },
  "dependencies": {
    "@freik/is-hidden-file": "^1.10.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^2.0.1",
    "@freik/build-tools": "^3.4.12",
    "@freik/core-utils": "^1.4.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.7",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  },
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": "^14.13.1 || >= 16.0.0"
  },
  "packageManager": "yarn@3.5.0"
}
